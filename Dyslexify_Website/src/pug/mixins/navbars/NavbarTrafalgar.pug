mixin NavbarTrafalgar
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3(data-navbar-on-scroll)
    .container
      a.navbar-brand.d-flex.align-items-center.fw-bold.fs-2(href='#')
        img.d-inline-block.me-3(src=`${CWD}assets/img/icons/logo.png` alt='' ) 
        | Trafalgar
      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
    
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0
          li.nav-item
            a.nav-link.fw-bold(aria-current='page', href='#' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item
            a.nav-link(href='#') Find a doctor
          li.nav-item
            a.nav-link(href='#') Apps
          li.nav-item
            a.nav-link(href='#testimonial') Testimonials
          li.nav-item
            a.nav-link(href='#about') About us
          
        